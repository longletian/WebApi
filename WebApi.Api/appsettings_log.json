{
  // »’÷æ≈‰÷√
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "Grpc": "Debug",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "Microsoft.AspNetCore.Http.Connections": "Debug"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "StartTime:{Timestamp:HH:mm:ss.fff} EventLevel:[{Level:u3}] ({Application}/{MachineName}/{ThreadId}) EventInfo:{Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
    //"FilterSwitches": { "filterSwitch": "Application = 'Sample'" },
    //"Filter": [
    //  {
    //    "Name": "ByIncludingOnly",
    //    "Args": {
    //      "switch": "$filterSwitch"
    //    }
    //  }
    //]
  }
}
