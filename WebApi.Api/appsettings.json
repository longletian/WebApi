{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Grpc": "Debug"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "Grpc": "Debug"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "发生时间:{Timestamp:HH:mm:ss.fff} 事件等级:[{Level:u3}] ({Application}/{MachineName}/{ThreadId}) 详细信息:{Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },

  "ConnectionStrings": {
    "DbAllow": "Mysql",
    "MysqlCon": "Data Source=127.0.0.1;Port=3306;User ID=root;Password=root; Initial Catalog=systemPlus;Charset=utf8; SslMode=none;Min pool size=1",
    "RedisCon": "127.0.0.1:6379,defaultDatabase=13",
    "MqCon": "Host=127.0.0.1"
  },

  "Audience": {
    "Issuer": "FlyLolo",
    "Audience": "TestAudience",
    "IssuerSigningKey": "sdfsdfsrty45634kkhllghtdgdfss345t678fs",
    "AccessTokenExpiresMinutes": "30",
    "RefreshTokenAudience": "RefreshTokenAudience",
    "RefreshTokenExpiresMinutes": "10080" //60*24*7
  },
  "AllowedHosts": "*"
}
