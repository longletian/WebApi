{
  // 日志配置
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "Grpc": "Debug",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "Microsoft.AspNetCore.Http.Connections": "Debug"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "StartTime:{Timestamp:HH:mm:ss.fff} EventLevel:[{Level:u3}] ({Application}/{MachineName}/{ThreadId}) EventInfo:{Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  // 连接字符串管理
  "ConnectionStrings": {
    "DefaultDB": 0,
    "DataType": {
      "MySql": 0,
      "SqlServer": 1,
      "PostgreSQL": 2,
      "Oracle": 3,
      "Sqlite": 4
    },
    "MySql": "Data Source=localhost;Port=3306;User ID=root;Password=root;Initial Catalog=postgisystem;Charset=utf8mb4;SslMode=none;Max pool size=1;Connection LifeTime=20",
    "SlaveMySql1": "Data Source=localhost;Port=33306;User ID=root;Password=root;Initial Catalog=postgisystem;Charset=utf8mb4;SslMode=none;Max pool size=1;Connection LifeTime=20",
    "SlaveMySql2": "Data Source=localhost;Port=33307;User ID=root;Password=root;Initial Catalog=postgisystem;Charset=utf8mb4;SslMode=none;Max pool size=1;Connection LifeTime=20",
    "PostgreSQL": "Host=localhost;Port=5432;Username=postgres;Password=root; Database=postgisystem;Pooling=true;Minimum Pool Size=1",
    "CsRedis": "localhost:6379,password=,defaultDatabase=0",
    "MongoDbCon": ""
  },
  // jwt配置
  "Audience": {
    "Issuer": "FlyLolo",
    "Audience": "TestAudience",
    "IssuerSigningKey": "sdfsdfsrty45634kkhllghtdgdfss345t678fs",
    "AccessTokenExpiresMinutes": "30",
    "RefreshTokenAudience": "RefreshTokenAudience",
    "RefreshTokenExpiresMinutes": "10080" //60*24*7
  },
  "IdentityServerConfig": {
    "IdentityServer4": false,
    "Name": "",
    "GrantType": "",
    "ClientId": "",
    "ClientSecret": "",
    "Authority": "",
    "UseHttps": false
  },
  // 钉钉对接视频配置
  "ZDingTalk": {
    "VideoBaseUrl": "",
    "DingUrl": "",
    "AppKey": "",
    "AppSecret": ""
  },
  // cap配置
  "CAP": {
    "DefaultStorage": "1",
    "DefaultMessageQueue": "0",
    "Storage": {
      "InMemoryStorage": 0,
      "MySql": 1
    },
    "MessageQueue": {
      "InMemoryQueue": 0,
      "RabbitMQ": 1
    },
    "RabbitMQ": {
      "HostName": "localhost",
      "UserName": "root",
      "Password": "root",
      "Port": 35672,
      "VirtualHost": "/wsl"
    }
  },
  "RabbitMQ": {
    "Enabled": false,
    "HostName": "localhost",
    "UserName": "root",
    "Password": "root",
    "Port": 35672,
    "VirtualHost": "/wsl",
    "RetryCount": 3
  },
  // 事件存储
  "EventStoresOptions": {
    "EventStoreType": "mongo",
    "DatabaseName": "EventStore",
    "CollectionName": "MovieEvents",
    "ConnectionString": "mongodb://127.0.0.1:27017"
  },
  "AllowedHosts": "*"
}
